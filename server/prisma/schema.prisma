// schema.prisma

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}
  
generator client {
    provider = "prisma-client-js"
}

enum Role {
    admin
    user
}
  
model Vev {
    id            String   @id @default(uuid())   // Use UUID for id as a string
    challengerId  String
    challengedId  String
    date          DateTime
    bookedDate    DateTime
    reason        String
    winnerId      String?

    challenger    User     @relation("challenger", fields: [challengerId], references: [id])
    challenged    User     @relation("Challenged", fields: [challengedId], references: [id])
    winner        User?    @relation("winner", fields: [winnerId], references: [id])
}

model User {
    id        String      @id @default(uuid()) // Use Auto Increment for ID
    username  String      @unique
    password  String
    role      Role        @default(user)
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    vevsChallenged Vev[] @relation("challenger")
    vevsChallengedBy Vev[] @relation("Challenged")
    vevsWon        Vev[] @relation("winner")
    userAchievements UserAchievement[] @relation("UserToUserAchievement")
}

model Achievement {
    id          String   @id @default(uuid()) // Use UUID for id as a string
    name        String
    description String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    userAchievements UserAchievement[]
}

model UserAchievement {
    id             String      @id @default(uuid())
    userId         String
    achievementId  String
    achievedAt     DateTime    @default(now())

    user           User        @relation("UserToUserAchievement", fields: [userId], references: [id])
    achievement    Achievement @relation(fields: [achievementId], references: [id])
}